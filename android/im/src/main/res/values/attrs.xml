<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BubbleLayout">
        <attr name="bubbleBgColor" format="color"/>
        <attr name="bubbleRadius" format="dimension"/>
        <attr name="arrowWidth" format="dimension"/>
        <attr name="arrowHeight" format="dimension"/>
        <attr name="arrowPositionY" format="dimension"/>
        <attr name="arrowDirecrion" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="ChatVoiceLayout">
        <attr name="cvl_duration" format="integer"/>
        <attr name="cvl_direction" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="PopupLayout">
        <attr name="pop_bg_color" format="color"/>
        <attr name="pop_radius" format="dimension"/>
        <attr name="pop_stroke_width" format="dimension"/>
        <attr name="pop_stroke_color" format="color"/>
        <attr name="pop_arrow_width" format="dimension"/>
        <attr name="pop_arrow_height" format="dimension"/>
        <attr name="pop_arrow_direction" format="enum">
            <enum name="top" value="0"/>
            <enum name="bottom" value="1"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="CallButtonLayout">
        <attr name="call_icon" format="integer"/>
        <attr name="call_size" format="dimension"/>
        <attr name="call_text_color" format="color"/>
        <attr name="call_text" format="string"/>
    </declare-styleable>

</resources>