<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingRight="@dimen/default_padding"
    android:paddingLeft="@dimen/default_padding"
    android:background="@color/white"
    android:id="@+id/container"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/line_color"
        />


    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:riv_corner_radius="5dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/img_thumb"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        tools:src="@drawable/bg_btn_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:layout_marginLeft="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/tv_title"
        android:padding="1dp"
        tools:text="女神碎花连衣裙 韩版大牌尾货夏日出街必备 今日特价福利女神碎花连衣裙 韩版大牌尾货夏日出街必备 今日特价福利女神碎花连衣裙 韩版大牌尾货夏日出街必备 今日特价福利"
        android:layout_alignTop="@+id/img_thumb"
        android:textSize="@dimen/text_size_14"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/img_thumb"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_thumb"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray1"
        android:textSize="@dimen/text_size_13"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintBottom_toTopOf="@id/tv_bring_tip"
        android:layout_marginBottom="5dp"
        tools:text="售价:123"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/tv_price"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="代销收益"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/textColor"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="@id/img_thumb"
        android:id="@+id/tv_bring_tip"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥ 880.00"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/global"
        android:id="@+id/tv_bring"
        app:layout_constraintTop_toTopOf="@id/tv_bring_tip"
        app:layout_constraintLeft_toRightOf="@id/tv_bring_tip"
        android:textStyle="bold"
        android:layout_marginLeft="3dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/btn_add"
        android:text="一键添加"
        android:textColor="@color/white"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textSize="@dimen/text_size_13"
        android:background="@drawable/bg_color_global_radius_15"
        app:layout_constraintBottom_toBottomOf="@id/img_thumb"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>