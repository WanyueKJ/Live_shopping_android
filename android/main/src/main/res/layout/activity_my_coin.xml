<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.MyCoinActivity">
<include layout="@layout/view_title"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_view"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/container"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_margin="@dimen/default_margin"
                >
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_my_coin"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:riv_corner_radius="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总资产(元)"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/alpha_white_8f"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginTop="@dimen/default_margin"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/tv_left_top_tip"
                    android:gravity="left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2000.00"
                    android:textSize="@dimen/text_size_19"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@id/tv_left_top_tip"
                    app:layout_constraintTop_toBottomOf="@id/tv_left_top_tip"
                    android:id="@+id/tv_left_top"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计消费(元)"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/alpha_white_8f"
                    android:layout_marginLeft="@dimen/default_margin"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_left_bottom"
                    android:id="@+id/tv_left_bottom_tip"
                    android:gravity="left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2000.00"
                    android:textSize="@dimen/text_size_19"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@id/tv_left_bottom_tip"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/default_margin"
                    android:id="@+id/tv_left_bottom"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="20dp"
           >
           <com.wanyue.common.custom.DrawableTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:dt_top_drawable="@drawable/icon_billing_records"
               app:dt_top_height="20dp"
               app:dt_top_width="18.5dp"
               android:text="账单记录"
               android:textColor="#999999"
               android:textSize="@dimen/text_size_13"
               android:drawablePadding="13dp"
               android:id="@+id/btn_billing_records"
               android:layout_marginLeft="37dp"
               />

           <com.wanyue.common.custom.DrawableTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:dt_top_drawable="@drawable/icon_purchase_history"
               app:dt_top_height="20dp"
               app:dt_top_width="18.5dp"
               android:text="消费记录"
               android:textColor="#999999"
               android:textSize="@dimen/text_size_13"
               android:drawablePadding="13dp"
               android:id="@+id/btn_purchase_history"
               android:layout_marginLeft="74dp"
               />
       </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>