<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="5dp"
    android:paddingLeft="@dimen/default_padding"
    android:paddingRight="@dimen/default_padding"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1"
        android:gravity="center"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/gray1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/img_rank_num"
        app:layout_constraintRight_toRightOf="@id/img_rank_num"
        android:id="@+id/tv_rank_num"
        android:textStyle="bold"
         />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:gravity="center"
        android:textColor="@color/gray1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/img_rank_num"
        tools:src="@drawable/medal01"
        />


    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="33dp"
        android:layout_height="33dp"
        app:riv_oval="true"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/img_avator"
        tools:src="@drawable/icon_spread_qrcode"
        android:layout_marginLeft="50dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="泰城吴彦祖"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/textColor"
        app:layout_constraintLeft_toRightOf="@id/img_avator"
        app:layout_constraintTop_toTopOf="@id/img_avator"
        app:layout_constraintBottom_toBottomOf="@id/img_avator"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥5.00"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/global"
        android:gravity="right"
        android:id="@+id/tv_price"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_avator"
        app:layout_constraintBottom_toBottomOf="@id/img_avator"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/line_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/line"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>