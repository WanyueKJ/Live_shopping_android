<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".store.view.activity.ProfitActivity">
    <include layout="@layout/view_title"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_margin="@dimen/default_margin"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_my_coin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:riv_corner_radius="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日收益(元)"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/alpha_white_8f"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tv_left_top_tip"
            android:gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2000.00"
            android:textSize="@dimen/text_size_19"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_left_top_tip"
            app:layout_constraintTop_toBottomOf="@id/tv_left_top_tip"
            android:id="@+id/tv_left_top"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已结算(元)"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/alpha_white_8f"
            android:layout_marginLeft="@dimen/default_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_left_bottom"
            android:id="@+id/tv_left_bottom_tip"
            android:gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2000.00"
            android:textSize="@dimen/text_size_19"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_left_bottom_tip"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/default_margin"
            android:id="@+id/tv_left_bottom"
            />

<!--123456789 123456789 123456789 123456789 123456789-->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日收益(元)"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/alpha_white_8f"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tv_right_top_tip"
             />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2000.00"
            android:textSize="@dimen/text_size_19"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@id/tv_right_top_tip"
            app:layout_constraintTop_toBottomOf="@id/tv_right_top_tip"
            android:id="@+id/tv_right_top"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未结算(元)"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/alpha_white_8f"
            android:layout_marginRight="@dimen/default_margin"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_left_bottom"
            android:id="@+id/tv_right_bottom_tip"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2000.00"
            android:textSize="@dimen/text_size_19"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@id/tv_right_bottom_tip"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/default_margin"
            android:id="@+id/tv_right_bottom"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:text="结算记录"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/default_padding"
        android:background="@color/white"
        />
    <com.wanyue.common.custom.refresh.RxRefreshView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/refreshView"
        android:layout_weight="1"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/default_margin"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可提现金额"
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/textColor2"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="¥80000.000"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:id="@+id/tv_allow_money"
                 />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="提现记录"
            android:textSize="@dimen/text_size_11"
            android:textColor="@color/global"
            android:background="@drawable/bound_color_global_radius_15"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:id="@+id/btn_record"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="立即提现"
            android:textSize="@dimen/text_size_11"
            android:textColor="@color/white"
            android:background="@drawable/bg_color_global_radius_15"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:gravity="center"
            android:id="@+id/btn_get_money"
            android:layout_marginRight="@dimen/default_margin"
            />

    </LinearLayout>

</LinearLayout>