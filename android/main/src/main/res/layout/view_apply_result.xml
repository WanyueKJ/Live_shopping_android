<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <ImageView
        android:layout_width="220dp"
        android:layout_height="156dp"
        android:src="@drawable/auth_status"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/information_audit_tip1"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_size_16"
        android:id="@+id/tv_tipTop"
        android:layout_marginBottom="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        tools:text="3个工作日内会有审核结果，请耐心等待"
        android:textColor="@color/textColor2"
        android:textSize="@dimen/text_size_13"
        android:id="@+id/tv_tipBottom"
        android:gravity="center_vertical"
        />

    <TextView
        style="@style/default_bottom_button_small_style"
        android:enabled="true"
        android:text="@string/reapply"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_reply"
        />

</LinearLayout>