<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activty.ViewLogisticsActivity"
    android:orientation="vertical"
    >
    <include layout="@layout/view_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <com.wanyue.shop.view.widet.linear.PoolLinearListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/goods_list_view"
                />
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingLeft="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="60dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/icon_logistics"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/img_icon_logistics"
                    />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:text="@string/order_detail_tip8"
                    app:layout_constraintLeft_toRightOf="@id/img_icon_logistics"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_tip_2"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/textColor2"
                    android:id="@+id/tv_tip_1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/default_margin"
                    />
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:text="@string/order_detail_tip9"
                    app:layout_constraintLeft_toRightOf="@id/img_icon_logistics"
                    app:layout_constraintTop_toBottomOf="@id/tv_tip_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/textColor2"
                    android:id="@+id/tv_tip_2"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/default_margin"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    app:layout_constraintLeft_toRightOf="@id/tv_tip_1"
                    app:layout_constraintTop_toTopOf="@id/tv_tip_1"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/textColor"
                    android:id="@+id/tv_logistics_company"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    app:layout_constraintLeft_toRightOf="@id/tv_tip_1"
                    app:layout_constraintBottom_toBottomOf="@id/tv_tip_2"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/textColor"
                    android:id="@+id/tv_express_no"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_11"
                    android:text="@string/copy_no"
                    android:textColor="@color/textColor"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bound_color_gray1_radius_2"
                    android:id="@+id/btn_copy"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.wanyue.shop.view.widet.linear.PoolLinearListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/logistics_list_view"
                android:paddingLeft="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding"
                android:background="@color/white"
                />
            
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:id="@+id/vp_container"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>