<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@drawable/bg_color_white_radius_5">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/default_padding"
    android:paddingRight="@dimen/default_padding"
    >
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_store"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="李二狗的小店"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/textColor"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_name"
        />

</LinearLayout>
<View android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/line_color"
    />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reclyView"
        />
    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_address_height"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/default_padding"
    android:paddingRight="@dimen/default_padding"
    android:id="@+id/btn_coupon"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coupon"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/textColor"
         />
    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/choose"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/gray3"
        android:id="@+id/tv_coupon"
         />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/icon_arrow_right"
            android:layout_marginLeft="10dp"
            />
</LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_address_height"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/express_fee"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/textColor"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
         />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="免运费"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/gray3"
        android:id="@+id/tv_freight"
        />
    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        />
    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remarks"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/textColor"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_padding"
         />

    <com.wanyue.shop.view.widet.DataEditTextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="@dimen/default_margin"
        android:hint="请添加备注（150字以内）"
        android:textSize="@dimen/text_size_13"
        android:textColorHint="@color/gray3"
        android:background="#FAFAFA"
        android:id="@+id/et_remark"
        android:padding="@dimen/default_padding"
        android:gravity="left"
         />

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:orientation="horizontal"
     android:gravity="center_vertical"
     android:layout_marginRight="@dimen/default_margin"
     >
     <Space
         android:layout_width="0dp"
         android:layout_height="0dp"
         android:layout_weight="1"
         />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="@dimen/text_size_13"
         android:textColor="@color/gray3"
         android:layout_marginRight="12dp"
         android:id="@+id/tv_total_num"
         />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="小计:"
         android:textSize="@dimen/text_size_13"
         android:textColor="@color/textColor"
         android:layout_marginRight="9dp"
         />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="¥80.00"
         android:textStyle="bold"
         android:id="@+id/tv_price"
         android:textSize="@dimen/text_size_13"
         android:textColor="@color/global"
        />
 </LinearLayout>


</LinearLayout>